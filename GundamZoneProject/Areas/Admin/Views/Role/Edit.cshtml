@using Microsoft.AspNet.Identity.EntityFramework
@model IdentityRole

@{
    ViewBag.Title = "Cập nhật quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Assets/AdminCss/Role/edit-role.css" rel="stylesheet" />
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/role" class="nav-link">Quyền</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật quyền</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/role">Quyền</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin quyền</h3>
        </div>

        <div class="card-body">

            <div class="bs-stepper-content">

                @using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x => x.Id)

                    <div class="content">

                        <div class="form-group">
                            <label>Tên quyền</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Tên quyền" })
                            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Sửa</button>
                            <a href="/admin/role" class="btn btn-danger">Quay lại</a>
                            
                        </div>

                    </div>
                }

            </div>

        </div>

        <div class="card-footer">
        </div>

    </div>

</section>
<!-- /.content -->
