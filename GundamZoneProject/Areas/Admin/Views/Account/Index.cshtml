@model IEnumerable<GundamZoneProject.Models.UserWithRoleViewModel>

@{
    ViewBag.Title = "Quản lý tài khoản";
}
<link href="~/Assets/AdminCss/Account/index-account.css" rel="stylesheet" />
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="@Url.Action("Index","Statistical")" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách tài khoản</h3>

            <div class="card-tools">
                <a href="/admin/account/create" class="btn btn-success">Thêm mới</a>
            </div>
        </div>
        <form enctype="multipart/form-data"></form>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tài khoản</th>
                        <th>Họ tên</th>
                        <th>Vai trò</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">
                                <td>@i</td>
                                <td>@item.UserName</td>
                                <td>@item.FullName</td>
                                <td>@string.Join(", ", item.Roles)</td>

                                <td>@item.Email</td>
                                <td>
                                    <a href="/admin/account/edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="#" data-user="@item.UserName" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }

                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {

            $('body').on('click', '.btnDelete', function (e) {
                e.preventDefault();

                var user = $(this).data('user');
                var id = $(this).data('id');

                Swal.fire({
                    title: "Bạn có chắc chắn?",
                    text: "Xoá tài khoản: " + user + "?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Xoá",
                    cancelButtonText: "Hủy"
                }).then((result) => {

                    if (result.isConfirmed) {

                        $.ajax({
                            url: '/admin/account/DeleteAccount',
                            type: 'POST',
                            data: { user: user, id: id },
                            success: function (res) {
                                if (res.Success || res.success) {

                                    $('#trow_' + id).remove();

                                    Swal.fire({
                                        title: "Đã xoá!",
                                        text: "Tài khoản đã được xoá.",
                                        icon: "success",
                                        timer: 1500,
                                        showConfirmButton: false
                                    });

                                } else {
                                    Swal.fire("Lỗi!", res.Message ?? "Không thể xoá tài khoản.", "error");
                                }
                            }
                        });

                    }

                });

            });

        });
    </script>
}
