@model GundamZoneProject.Models.EntityFrameWork.Product
@{
    ViewBag.Title = "Cập nhật sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/autonumeric@4.6.0/dist/autoNumeric.min.js"></script>
<link href="~/Assets/AdminCss/Products/edit-product.css" rel="stylesheet" />
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/products" class="nav-link">Sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/overview">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin sản phẩm</h3>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">

                    @using (Html.BeginForm("Edit", "Products", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.Id)
                        @Html.HiddenFor(x => x.CreatedDate)

                        <div class="card">
                            <div class="card-header p-2">
                                <ul class="nav nav-pills">
                                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông tin chung</a></li>
                                </ul>
                            </div>

                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="activity">

                                        <div class="form-group">
                                            <label>Tên sản phẩm</label>
                                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Tên sản phẩm" })
                                        </div>

                                        <div class="form-group">
                                            <label>Alias</label>
                                            @Html.TextBoxFor(x => x.Alias, new { @class = "form-control", @placeholder = "Alias" })
                                        </div>

                                        <div class="form-group">
                                            <label>Nhà sản xuất</label>
                                            @Html.TextBoxFor(x => x.Manufacturer, new { @class = "form-control" })
                                        </div>

                                        <div class="form-group">
                                            <label>Danh mục</label>
                                            @Html.DropDownListFor(x => x.ProductCategoryID, ViewBag.ProductCategory as SelectList, "-Chọn danh mục-", new { @class = "form-control" })
                                        </div>

                                        <div class="form-group">
                                            <label>Chi tiết sản phẩm</label>
                                            @Html.TextAreaFor(x => x.Detail, new { @class = "form-control", @id = "txtDetail" })
                                        </div>

                                        <div class="row">
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <label>Số lượng</label>
                                                    @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })
                                                </div>
                                            </div>

                                            <!-- GIÁ NHẬP -->
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <label>Giá nhập</label>
                                                    <input type="text"
                                                           name="demoOriginalPrice"
                                                           id="demoOriginalPrice"
                                                           class="form-control auto"
                                                           value="@Model.OriginalPrice"/>

                                                    @Html.HiddenFor(x => x.OriginalPrice)
                                                </div>
                                            </div>

                                            <!-- GIÁ BÁN -->
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <label>Giá bán</label>
                                                    <input type="text"
                                                           name="demoPrice"
                                                           id="demoPrice"
                                                           class="form-control auto"
                                                           value="@Model.Price" />

                                                    @Html.HiddenFor(x => x.Price)
                                                </div>
                                            </div>

                                            <!-- GIÁ KM -->
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <label>Giá khuyến mãi</label>
                                                    <input type="text"
                                                           name="demoPriceSale"
                                                           id="demoPriceSale"
                                                           class="form-control auto"
                                                           value="@(Model.PriceSale)" />

                                                    @Html.HiddenFor(x => x.PriceSale)
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-3">
                                                <div class="custom-control custom-checkbox">
                                                    @Html.CheckBoxFor(x => x.IsActive, new { @class = "custom-control-input", @id = "chkActive" })
                                                    <label class="custom-control-label" for="chkActive">Hiển thị</label>
                                                </div>
                                            </div>

                                            <div class="col-3">
                                                <div class="custom-control custom-checkbox">
                                                    @Html.CheckBoxFor(x => x.isHome, new { @class = "custom-control-input", @id = "chkHome" })
                                                    <label class="custom-control-label" for="chkHome">Trang chủ</label>
                                                </div>
                                            </div>

                                            <div class="col-3">
                                                <div class="custom-control custom-checkbox">
                                                    @Html.CheckBoxFor(x => x.isSale, new { @class = "custom-control-input", @id = "chkSale" })
                                                    <label class="custom-control-label" for="chkSale">Khuyến mại</label>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="form-group m-3">
                                <button type="submit" class="btn btn-success btn-sm">Cập nhật</button>
                                <a href="/admin/products" class="btn btn-danger btn-sm">Quay lại</a>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</section>

@section scripts{
    <script>
        $(document).ready(function () {

            // Init AutoNumeric v4
            const originalPrice = new AutoNumeric('#demoOriginalPrice', {
                digitGroupSeparator: '.',
                decimalCharacter: ',',
                decimalPlaces: 0
            });

            const price = new AutoNumeric('#demoPrice', {
                digitGroupSeparator: '.',
                decimalCharacter: ',',
                decimalPlaces: 0
            });

            const salePrice = new AutoNumeric('#demoPriceSale', {
                digitGroupSeparator: '.',
                decimalCharacter: ',',
                decimalPlaces: 0
            });

            // Set RAW to hidden fields
            $('#demoOriginalPrice').on('blur keyup', function () {
                $('#OriginalPrice').val(originalPrice.getNumber());
            });

            $('#demoPrice').on('blur keyup', function () {
                $('#Price').val(price.getNumber());
            });

            $('#demoPriceSale').on('blur keyup', function () {
                $('#PriceSale').val(salePrice.getNumber());
            });

            CKEDITOR.replace('txtDetail');
        });
    </script>


}
