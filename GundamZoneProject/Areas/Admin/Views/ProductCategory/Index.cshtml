@model IEnumerable<GundamZoneProject.Models.EntityFrameWork.ProductCategory>
@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Assets/AdminCss/ProductCategory/index-product-cate.css" rel="stylesheet" />
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="@Url.Action("Index","Statistical")" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/ProductCategory" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý danh mục sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    @*<li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>*@
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/ProductCategory/add" class="btn btn-primary">Thêm mới</a>
                <a href="#" class="btn btn-danger" id="BtnDeleteAll">Xoá hết</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>STT</th>
                        <th>Tên danh mục</th>
                        <th>Ngày tạo</th>
                        @*<th class="text-center">Hiển thị</th>*@
                        <th style="width:150px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {

                            //var strCheck = item.IsActive ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td>@item.Title</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                @*<td class="text-center align-middle">
                                        <a href='#' data-id="@item.Id" class="btnActive">@Html.Raw(strCheck)</a>
                                    </td>*@
                                <td>
                                    <a href="/admin/ProductCategory/edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xoá</a>

                                </td>
                            </tr>
                            i++;
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section scripts
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {

            // ======================= XÓA TẤT CẢ ==========================
            $('body').on('click', '#BtnDeleteAll', function (e) {
                e.preventDefault();

                var ids = [];
                $('.cbkItem:checked').each(function () {
                    ids.push($(this).val());
                });

                if (ids.length === 0) {
                    Swal.fire("Chưa chọn!", "Bạn chưa chọn bản ghi nào.", "warning");
                    return;
                }

                Swal.fire({
                    title: "Xóa tất cả?",
                    text: "Bạn có muốn xóa " + ids.length + " danh mục đã chọn?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Xoá",
                    cancelButtonText: "Hủy"
                }).then((result) => {

                    if (result.isConfirmed) {

                        $.ajax({
                            url: '/admin/ProductCategory/deleteAll',
                            type: 'POST',
                            data: { ids: ids.join(',') },
                            success: function (rs) {
                                if (rs.success) {

                                    // Xoá từng dòng trên giao diện
                                    ids.forEach(id => {
                                        $('#trow_' + id).remove();
                                    });

                                    Swal.fire({
                                        title: "Đã xoá!",
                                        text: "Các danh mục đã được xoá.",
                                        icon: "success",
                                        timer: 1500,
                                        showConfirmButton: false
                                    });
                                }
                            }
                        });

                    }

                });

            });


            // ======================= CHỌN TẤT CẢ ==========================
            $('body').on('change', '#SelectAll', function () {
                $('.cbkItem').prop('checked', this.checked);
            });



            // ======================= XÓA TỪNG BẢN GHI ==========================
            $('body').on('click', '.btnDelete', function (e) {
                e.preventDefault();
                var id = $(this).data("id");

                Swal.fire({
                    title: "Bạn có chắc chắn?",
                    text: "Bạn có muốn xoá danh mục này không?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Xoá",
                    cancelButtonText: "Hủy"
                }).then((result) => {

                    if (result.isConfirmed) {

                        $.ajax({
                            url: '/admin/ProductCategory/delete',
                            type: 'POST',
                            data: { id: id },
                            success: function (rs) {
                                if (rs.success) {

                                    $('#trow_' + id).remove();

                                    Swal.fire({
                                        title: "Đã xoá!",
                                        text: "Danh mục đã được xoá.",
                                        icon: "success",
                                        timer: 1500,
                                        showConfirmButton: false
                                    });
                                }
                            }
                        });

                    }
                });

            });

        });
    </script>
}

