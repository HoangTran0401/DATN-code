@model IEnumerable<GundamZoneProject.Models.EntityFrameWork.Product>

<link href="~/Assets/CustomerCss/partial_product-sale.css" rel="stylesheet" />

@if (Model != null && Model.Any())
{
    <div class="sale-block-wrapper">
        <div class="best_sellers">
            <div class="container">

                <div class="row">
                    <div class="col text-center">
                        <div class="section_title new_arrivals_title">
                            <h2>Sản phẩm giảm giá</h2>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="product_slider_container">

                            <!-- SLIDER GIẢM GIÁ (ID RIÊNG) -->
                            <div id="slider-sale" class="owl-carousel owl-theme">

                                @foreach (var item in Model)
                                {
                                    var strImage = "";
                                    var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
                                    if (img != null)
                                    {
                                        strImage = img.Image;
                                    }

                                    <div class="product-item @item.ProductCategory.Alias">
                                        <div class="product discount product_filter">

                                            <div class="product_image">
                                                <img src="@strImage" alt="@item.Title">
                                            </div>

                                            @if (item.PriceSale > 0)
                                            {
                                                <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center">
                                                    <span>Sale</span>
                                                </div>
                                            }

                                            <div class="product_info">
                                                <h6 class="product_name">
                                                    <a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a>
                                                </h6>

                                                @if (item.PriceSale > 0)
                                                {
                                                    <div class="product_price">
                                                        @GundamZoneProject.Common.Common.FormatNumber(item.PriceSale, 0)
                                                        <span>@GundamZoneProject.Common.Common.FormatNumber(item.Price, 0)</span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="product_price">
                                                        @GundamZoneProject.Common.Common.FormatNumber(item.Price, 0)
                                                    </div>
                                                }
                                            </div>

                                        </div>

                                        <div class="red_button add_to_cart_button">
                                            <a href="#" class="btnAddToCart" data-id="@item.Id">Thêm vào giỏ hàng</a>
                                        </div>

                                    </div>

                                }

                            </div>

                            <!-- NAV GIẢM GIÁ (RIÊNG) -->
                            <div id="nav-sale-left" class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
                                <i class="fa fa-chevron-left" aria-hidden="true"></i>
                            </div>

                            <div id="nav-sale-right" class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
                                <i class="fa fa-chevron-right" aria-hidden="true"></i>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}

<!-- SCRIPT RIÊNG CHO SLIDER GIẢM GIÁ -->
<script>
    $(document).ready(function () {

        var sliderSale = $("#slider-sale");

        sliderSale.owlCarousel({
            loop: true,
            margin: 20,
            autoplay: false,
            nav: false,
            dots: false,
            responsive: {
                0: { items: 2 },
                600: { items: 3 },
                1000: { items: 5 }
            }
        });

        // NAV HOẠT ĐỘC LẬP
        $("#nav-sale-left").click(function () {
            sliderSale.trigger("prev.owl.carousel");
        });

        $("#nav-sale-right").click(function () {
            sliderSale.trigger("next.owl.carousel");
        });

    });
</script>
