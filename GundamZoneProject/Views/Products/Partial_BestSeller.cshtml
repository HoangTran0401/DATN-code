@model IEnumerable<GundamZoneProject.Models.BestSellerModel>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
<link href="~/Assets/CustomerCss/partial-bestseller.css" rel="stylesheet" />

@if (Model != null && Model.Any())
{
    <div class="sale-block-wrapper">
        <div class="best_sellers">
            <div class="container">

                <div class="row">
                    <div class="col text-center">
                        <div class="section_title new_arrivals_title">
                            <h2>Sản phẩm bán chạy</h2>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">

                        <div class="product_slider_container">

                            <!-- SLIDER BÁN CHẠY (ID RIÊNG) -->
                            <div id="slider-best" class="owl-carousel owl-theme">

                                @foreach (var item in Model)
                                {
                                    <div class="product-item">
                                        <div class="product discount product_filter">

                                            <div class="product_image">
                                                <img src="@item.Image" alt="@item.Title" />
                                            </div>

                                            <div class="product_info">
                                                <h6 class="product_name">
                                                    <a href="/chi-tiet/@item.Alias-p@(item.ProductId)">
                                                        @item.Title
                                                    </a>
                                                </h6>

                                                <div class="product_price">
                                                    @GundamZoneProject.Common.Common.FormatNumber(item.Price, 0) đ
                                                </div>

                                                <div style="font-size: 13px; color: #d62828;">
                                                    Đã bán: <b>@item.Quantity</b>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="red_button add_to_cart_button">
                                            <a href="#" class="btnAddToCart" data-id="@item.ProductId">
                                                Thêm vào giỏ hàng
                                            </a>
                                        </div>
                                    </div>
                                }

                            </div>

                            <!-- NAV BÁN CHẠY (RIÊNG) -->
                            <div id="nav-best-left" class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
                                <i class="fa fa-chevron-left" aria-hidden="true"></i>
                            </div>

                            <div id="nav-best-right" class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
                                <i class="fa fa-chevron-right" aria-hidden="true"></i>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}

<!-- SCRIPT RIÊNG CHO SLIDER BÁN CHẠY -->
<script>
    $(document).ready(function () {

        var sliderBest = $("#slider-best");

        sliderBest.owlCarousel({
            loop: true,
            margin: 20,
            autoplay: false,
            nav: false,
            dots: false,
            responsive: {
                0: { items: 2 },
                600: { items: 3 },
                1000: { items: 5 }
            }
        });

        // NAV HOẠT ĐỘNG ĐỘC LẬP (KHÔNG ĐỤNG SLIDER KHÁC)
        $("#nav-best-left").click(function () {
            sliderBest.trigger("prev.owl.carousel");
        });

        $("#nav-best-right").click(function () {
            sliderBest.trigger("next.owl.carousel");
        });

    });
</script>
