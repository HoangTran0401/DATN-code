﻿@{
    ViewBag.Title = "Xác nhận quên mật khẩu";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<style>
    /* ================================
   CONFIRM WRAPPER
================================ */
.confirm-wrapper {
    max-width: 500px;
    margin: 160px auto 80px auto;
    background: #fff;
    padding: 40px 45px;
    border-radius: 20px;
    box-shadow: 0 6px 28px rgba(0,0,0,0.08);
    text-align: center;
}

/* Tiêu đề */
.confirm-title {
    font-family: 'Be Vietnam Pro', sans-serif;
    font-weight: 700;
    font-size: 32px;
    color: #e63946;
    margin-bottom: 20px;
}

/* Nội dung */
.confirm-text {
    font-size: 16px;
    color: #555;
    margin-bottom: 25px;
}

/* Button */
.btn-confirm {
    display: inline-block;
    padding: 12px 20px;
    background: linear-gradient(145deg, #e63946, #cc1f2c);
    color: #fff;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    transition: .25s;
}

.btn-confirm:hover {
    background: linear-gradient(145deg, #cc1f2c, #b51622);
}

/* Responsive */
@@media (max-width: 768px) {
    .confirm-wrapper {
        padding: 30px;
        margin-top: 120px;
    }
}

</style>
<div class="confirm-wrapper">
    <h2 class="confirm-title">Xác nhận quên mật khẩu</h2>

    <p class="confirm-text">
        Vui lòng kiểm tra email của bạn để đặt lại mật khẩu.
    </p>

    <a href="/account/login" class="btn-confirm">Quay lại đăng nhập</a>
</div>
