@{
    ViewBag.Title = "Xác nhận đặt lại mật khẩu";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<style>
    .confirm-container {
        max-width: 600px;
        margin: 160px auto 40px auto;
    }

    .confirm-card {
        background: #fff;
        padding: 35px;
        border-radius: 12px;
        box-shadow: 0px 6px 25px rgba(0,0,0,0.08);
        text-align: center;
    }

        .confirm-card h2 {
            font-weight: 700;
            margin-bottom: 18px;
            font-size: 24px;
        }

        .confirm-card p {
            font-size: 16px;
            color: #444;
            margin-top: 10px;
        }

    .btn-login {
        margin-top: 18px;
        display: inline-block;
        padding: 10px 22px;
        background: #007bff;
        color: #fff;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: 0.2s;
    }

        .btn-login:hover {
            background: #005ec4;
            color: #fff;
        }
</style>

<div class="confirm-container">
    <div class="confirm-card">

        <h2>@ViewBag.Title</h2>

        <p>Mật khẩu của bạn đã được đặt lại thành công!</p>

        @Html.ActionLink(
            "Đăng nhập ngay",
            "Login",
            "Account",
            null,
            new { @class = "btn-login" }
        )

    </div>
</div>
